@model WebApplication1.Models.TbProduct
@{
    Layout = "~/Areas/Admin/Views/Shared/_layoutAdmin.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Thêm sản phẩm</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">General Form</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Thêm sản phẩm</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form asp-action="Create">
                            <div class="card-body">
                                <div class="form-group">
                                    <label asp-for="Title">Tên Sản Phẩm</label>
                                    <input asp-for="Title" class="form-control">
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="CategoryProductId">Danh Mục</label>
                                    <select asp-for="CategoryProductId" class="form-control" asp-items="ViewBag.CategoryProductId">
                                    <option value="0" selected>[Chọn danh mục]</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Image" class="control-label">Ảnh</label>
                                    <div class="input-group mb-3">
                                        <div class="input group-preprend">
                                            <button type="button" class="btn btn-success btn-round" onclick="openDialog()">Choose a picture</button>
                                    </div>
                                        <input type="text" class="form-control" id="file-input" asp-for="Image" aria-describedby="button-addon2">
                                </div>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Price">Giá</label>
                                    <input asp-for="Price" class="form-control">
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="PriceSale">Giá Giảm</label>
                                    <input asp-for="PriceSale" class="form-control">
                                    <span asp-validation-for="PriceSale" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Quantity">Số lượng</label>
                                    <input asp-for="Quantity" class="form-control">
                                    <span asp-validation-for="Quantity" class="text-danger"></span>
                                </div>

                                <div class="form-group form-check">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="form-check-input" asp-for="IsNew" /> Sản phẩm mới
                                    </label>
                                </div>

                                <div class="form-group">
                                    <label asp-for="IsBestSeller">Bán chạy</label>
                                    <input asp-for="IsBestSeller" class="form-control">
                                    <span asp-validation-for="IsBestSeller" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Star">Sao</label>
                                    <input asp-for="Star" class="form-control">
                                    <span asp-validation-for="Star" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Detail">Mô tả</label>
                                    <textarea asp-for="Detail" class="form-control"></textarea>
                                    <span asp-validation-for="Detail" class="text-danger"></span>
                                </div>


                                <div class="form-group form-check">
                                    <label class="form-check-label">
                                        <input type="checkbox" class="form-check-input" asp-for="IsActive" /> Hiển thị
                                    </label>
                                </div>

                                <div class="d-flex mt-3">
                                    <div class="form-group mr-2">
                                        <button type="submit" class="btn btn-primary rounded">Thêm mới</button>

                                    </div>

                                    <div class="form-group">
                                        <button type="submit" class="btn btn-danger rounded mr-3" asp-action="Index">Quay Lại</button>
                                    </div>

                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

                                    @{
                                        var summernote = new WebApplication1.Areas.Admin.Model.SummerNote("#Detail");
                                        <partial name="_SummerNote" model="summernote" />
                                    }

                                @section Scripts {
                                   @{
                                       await Html.RenderPartialAsync("_ValidationScriptsPartial");
                                   }
                                }
